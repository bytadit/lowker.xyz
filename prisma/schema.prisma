generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Lowker{
  id          String    @id @default(cuid()) @map("_id")
  title       String
  company     String
  description String?
  deadline    DateTime
  datePosted  DateTime
  duration    Int
  type        String
  location    String
  salary      Float
  source      String
  createdBy   String

  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @default(now()) @updatedAt @map("updated_at") 
}
